  </div>\n</template>\n\n<script>\n\nconst focus = {\n    inserted: (el) => {\n        el.focus()\n    }\n}\nexport default {\n    directives:{\n        focus\n    },\n    data: () => ({\n        currentTask:'',\n        showList: false,\n        tasks: [\n            {name: 'Fazer curso', isDone: false}\n        ]\n    }),\n    methods:{\n        handleShowHideList(){\n            this.showList = !this.showList\n        },\n        remove(task){\n            this.tasks = this.tasks.filter(t => {\n                t.name !== task.name\n            })\n            console.log(task)\n\n        },\n        complete(task){\n            this.tasks = this.tasks.map(t => {\n                if(t.name === task.name){\n                    return({...t, isDone: !t.isDone})\n                }\n                return{...t}\n            })\n        },\n        addTask(){\n            this.tasks.push({\n                name: this.currentTask,\n                isDone: false\n            })\n            this.currentTask = ''\n        }\n    }\n}\n</script>\n\n<style>\n.line-through{\n    text-decoration: line-through;\n}\n.task-item{\n    cursor: pointer;\n}\n</style>"]}]}