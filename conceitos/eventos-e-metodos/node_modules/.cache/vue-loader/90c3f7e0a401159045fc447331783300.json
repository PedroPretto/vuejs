          this.tasks = this.tasks.filter(t => {\n                t.name !== task.name\n            })\n            console.log(task)\n\n        },\n        complete(task){\n            this.tasks = this.tasks.map(t => {\n                if(t.name === task.name){\n                    return({...t, isDone: !t.isDone})\n                }\n                return{...t}\n            })\n        }\n    }\n}\n</script>\n\n<style>\n.line-through{\n    text-decoration: line-through;\n}\n.task-item{\n    cursor: pointer;\n}\n</style>"]}]}